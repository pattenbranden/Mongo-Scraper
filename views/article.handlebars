<div class="row">
    <a href="{{article.link}}"><h3 class="card">{{article.title}}</h3></a>
    <h5 class="card-panel articleBody">{{body}}
        <img class="responsive-img" src="{{article.img}}" alt="">
    </h5>

</div>
<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this Article</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>

            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>

        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
                {{#if article.favorite}}
                <a data-articleId="{{article._id}}" class="btn btn-primary unsave-btn">Remove from saved</a>
                {{else}}
                <a data-articleId="{{article._id}}" class="btn btn-primary save-btn">Save this article</a>
                {{/if}}
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <div class="card-panel">
            <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}</p>
            <a data-commentId="{{_id}}" class="btn btn-primary delete-comment">Delete Comment</a>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

        </div>
    </div>
</div>