<div>
    <h1 class="card z-depth-3 center-align">Read the Latest from 'PC-GAMER'</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>
<div class="row">
    <div class="col s2">

    </div>
    <div class="col s8 left-align">
        {{#each article}}
        <div class="card-panel article">
            <div class="card-image">
                <img class="responsive-img" src="{{this.img}}" alt="">
            </div>
            <div class="card-panel">
                <h4>{{this.title}}</h4>
                <p>{{this.synopsis}}</p>
                <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Read Article</a>
                <a href="{{this.link}}" class="waves-effect waves-light btn" id="btnSignUp">View Source</a>
                {{#if article.favorite}}
                <a data-articleId="{{this._id}}" class="btn btn-primary unsave-btn">Remove from saved</a>
                {{else}}
                <a data-articleId="{{this._id}}" class="btn btn-primary save-btn">Save this article</a>
                {{/if}}
            </div>

        </div>
        {{/each}}
    </div>

</div>